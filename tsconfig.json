{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "lib": [
      "es2020"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["*.ts"],
  "exclude": [
    "node_modules"
  ]
}